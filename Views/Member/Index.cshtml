@model IEnumerable<TermProject.Models.Members>

@{
    ViewData["Title"] = "Sport League";
}

<h1 style="text-align: center; margin-bottom: 20px; color: #343a40; font-size: 2rem;">Sports League List</h1>

<p style="text-align: center;">
    <a asp-action="Create" style="padding: 10px 15px; background-color: #007bff; color: white; border: none; border-radius: 4px; text-decoration: none;">Create New</a>
</p>

<div style="overflow-x: auto; margin: 20px auto; max-width: 100%;">
    <table style="width: 100%; border-collapse: collapse; margin: auto;">
        <thead style="background-color: #e9ecef;">
            <tr>
                <th style="padding: 12px; border: 1px solid #dee2e6; text-align: left;">@Html.DisplayNameFor(model => model.LeagueName)</th>
                <th style="padding: 12px; border: 1px solid #dee2e6; text-align: left;">@Html.DisplayNameFor(model => model.Sport)</th>
                <th style="padding: 12px; border: 1px solid #dee2e6; text-align: left;">@Html.DisplayNameFor(model => model.Country)</th>
                <th style="padding: 12px; border: 1px solid #dee2e6; text-align: left;">@Html.DisplayNameFor(model => model.Division)</th>
                <th style="padding: 12px; border: 1px solid #dee2e6; text-align: left;">@Html.DisplayNameFor(model => model.Email)</th>
                <th style="padding: 12px; border: 1px solid #dee2e6; text-align: left;">@Html.DisplayNameFor(model => model.Cell)</th>
                <th style="padding: 12px; border: 1px solid #dee2e6; text-align: left;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                            <tr>
                                <td style="padding: 12px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.LeagueName)</td>
                                <td style="padding: 12px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.Sport)</td>
                                <td style="padding: 12px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.Country)</td>
                                <td style="padding: 12px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.Division)</td>
                                <td style="padding: 12px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.Email)</td>
                                <td style="padding: 12px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.Cell)</td>
                                <td style="padding: 12px; border: 1px solid #dee2e6;">
                                    <a asp-action="Edit" asp-route-id="@item.ID" style="padding: 8px 12px; background-color: #ffc107; color: white; border: none; border-radius: 4px; text-decoration: none;">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.ID" style="padding: 8px 12px; background-color: #17a2b8; color: white; border: none; border-radius: 4px; text-decoration: none;">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.ID" style="padding: 8px 12px; background-color: #dc3545; color: white; border: none; border-radius: 4px; text-decoration: none;" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                                </td>
                            </tr>
                }
            }
            else
            {
                    <tr>
                        <td colspan="7" style="padding: 12px; text-align: center; border: 1px solid #dee2e6;">No records found.</td>
                    </tr>
            }
        </tbody>
    </table>
</div>

<!-- Responsive Styles for Small Screens -->
<script>
    window.addEventListener('resize', function() {
        if (window.innerWidth < 768) {
            document.querySelectorAll('h1').forEach(h => h.style.fontSize = '1.5rem');
            document.querySelectorAll('.btn').forEach(btn => btn.style.width = '100%');
        } else {
            document.querySelectorAll('h1').forEach(h => h.style.fontSize = '2rem');
            document.querySelectorAll('.btn').forEach(btn => btn.style.width = 'auto');
        }
    });
</script>
