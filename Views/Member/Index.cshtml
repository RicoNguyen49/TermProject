@model IEnumerable<TermProject.Models.Members>

@{
    ViewData["Title"] = "Sport League";
}

<h1 style="text-align: center; margin-bottom: 20px;">Sports League List</h1>

<p style="text-align: center;">
    <a asp-action="Create" class="btn btn-primary" style="padding: 10px 20px;">Create New</a>
</p>

<div style="overflow-x:auto; text-align: center;">
    <table class="table" style="margin: 0 auto; width: 80%; border-collapse: collapse;">
        <thead style="background-color: #f2f2f2;">
            <tr>
                <th style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayNameFor(model => model.LeagueName)</th>
                <th style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayNameFor(model => model.Sport)</th>
                <th style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayNameFor(model => model.CountryOrgin)</th>
                <th style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayNameFor(model => model.HeadQuarters)</th>
                <th style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayNameFor(model => model.Division)</th>
                <th style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayNameFor(model => model.Email)</th>
                <th style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayNameFor(model => model.Cell)</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.LeagueName)</td>
                        <td style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Sport)</td>
                        <td style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.CountryOrgin)</td>
                        <td style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.HeadQuarters)</td>
                        <td style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Division)</td>
                        <td style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Email)</td>
                        <td style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Cell)</td>
                        <td style="padding: 10px; border: 1px solid #ddd;">
                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ID" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" style="padding: 10px; text-align: center; border: 1px solid #ddd;">No records found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
